<div class="container">
  <h1>Lil Twitter!</h1>
  <p>Go follow someone!</p>


  <form action="/user/login" method='get'>
    <button>Login</button>
  </form>
  <br>
  <form action="/user/create" method='get'>
    <button>Create Account</button>
  </form>
</div>

<div class="container">
  <h2>These are the current tweets for all users.</h2>
  <% @tweets.sort_by{|t| t.created_at}.reverse!.each do |tweet| %>
    <h2> User: <%= User.find(tweet.user_id).username %> </h2>
    <p><%= tweet.created_at %></p>
    <p><%= tweet.content %></p>
    <% end %>
</div>
